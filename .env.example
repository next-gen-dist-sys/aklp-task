# AKLP Task Service - Environment Variables
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env

# Application Settings
APP_NAME=aklp-task
APP_VERSION=0.1.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8003

# Database Settings
# 로컬 개발용 (localhost)
# docker-compose는 environment에서 'postgres'로 override
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/aklp_task

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
